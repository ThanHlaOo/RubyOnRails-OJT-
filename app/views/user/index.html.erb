
<%= render partial: "layouts/header" %>
<div class="login-header">
  <h1> User List</h1>
  
</div>
 <% if flash[:user_created] %>
    <%  flash[:user_created].each do |message| %>
      <p  class="success"> <%= message%></p>
    <% end %>
  <% end%>
  <% if flash[:post_updated] %>
    <%  flash[:post_updated].each do |message| %>
      <p  class="success"> <%= message%></p>
    <% end %>
  <% end%>
    <% if flash[:post_deleted] %>
    <%  flash[:post_deleted].each do |message| %>
      <p  class="success"> <%= message%></p>
    <% end %>
  <% end%>
       <% if flash[:notice] %>
    <%  flash[:notice].each do |message| %>
      <p  class="success"> <%= message%></p>
    <% end %>
  <% end%>
  <% if flash[:alert] %>
    <%  flash[:alert].each do |message| %>
      <p  class="success"> <%= message%></p>
    <% end %>
  <% end%>

<div class="input-group clearfix">
  <div class="user-list">
 

  <%= form_with(url: '/search', method: :get, html: { class: 'list-form' }) do |form| %>
		<label for="name">Name:</label>
		<input type="text" name="user[name]" class="user-input" id="name">
		<label for="email">Email:</label>
		<input type="text" name="user[email]" class="user-input" id="email">
		<label for="from">From:</label>
		<input type="date" name="user[from_date]" class="user-input" id="from">
		<label for="to">To:</label>
		<input type="date" name="user[to_date]" class="user-input" id="to">
    <button type="submit" class="register-btn list-btn user-search-btn">Search</button>
  <% end %>
  </div>
</div>
<section class="sec-content">
  
<table class="post-table">
  <thead>
      <tr>
        <td>
				No
        </td>
        <td>
        Name
        </td>
        <td>
       Email
        </td>
        <td>
      Created User
        </td>
        <td>
        Type
        </td>
				  <td>
        Phone
        </td>
				  <td>
        Date of Birth
        </td>
							  <td>
        Address
        </td>
						  <td>
        Created_date
        </td>
				  <td>
        Updated_date
        </td>
				  <td>
        Operation
        </td>
      </tr>
  </thead>
  <tbody>
  <% if @users.empty? %>
  <tr><td colspan="4" style="text-align: center; font-size:20px;padding:15px;">No data avaiable in table.</td></tr>
  <% else %>
    <% @users.each do |user| %>
    <tr>       
      <td>
          <a href="<%= user.id%>" class="post-title" > <%= user.id %></a>
        </td>
        <td>
          <%=  user.name%>
        </td>
				<td>
          <%=  user.email%>
        </td>
				<td>
          <%= User.find(user.create_user_id).name %>
        </td>
        <td>
          <%= user.role == "1" ? "Admin": "User"%>
        </td>
					<td>
          <%= user.phone%>
        </td>
					<td>
				 <%= user.dob ? user.dob.strftime("%Y/%m/%d") : "-" %>
        </td>
						<td>
          <%= user.address%>
        </td>
        <td>
          <%= user.created_at.strftime("%Y/%m/%d") %>
        </td>
				    <td>
          <%= user.updated_at.strftime("%Y/%m/%d") %>
        </td>
        <td>
            <div class="table-btn-group user-btn-group">
              <%= link_to "Delete", link_to("/users"), method: :delete, class: "delete-btn"  %>
              
            </div>
        </td>
    </tr>
    
  <% end %>
  <% end %>
  </tbody>
</table>
</section>

    <%= render partial: "layouts/footer" %>
