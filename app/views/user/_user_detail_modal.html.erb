
<!-- The Modal -->
<div id="detail-modal_<%= user.id%>" class="myModal user-modal">
  <!-- Modal content -->
  <div class="modal-content user-modal-content">

    <div class="modal-content-right">

      <div class="modal-header">
        <p>User Detail</p>
        <span class="close" data_id="<%= user.id %>">&times;</span>
      </div>

        <div class="profile-container">
        
        </div>
        <div class="modal-body">
          <table style="border: 0;"  class="modal-table">
            <tr>
              <td>Name</td>
              <td><%= user.name %></td>
            </tr>
                  <tr>
              <td>Type</td>
              <td><%= user.role == "0" ? "User": "Admin" %></td>
            </tr>
             <tr>
              <td>Email</td>
              <td><%=  user.email %></td>
            </tr>
               <tr>
              <td>Phone</td>
              <td><%=  user.phone %></td>
            </tr>
               <tr>
              <td>Date of Birth</td>
              <td><%= user.dob ? user.dob.strftime("%Y/%m/%d") : "-"%></td>
            </tr>
               <tr>
              <td>Address</td>
              <td><%= user.address %></td>
            </tr>
             <tr>
              <td>Created Date</td>
              <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
                  <tr>
              <td>Created User</td>
              <td><%= User.find(user.create_user_id).name %></td>
            </tr>
            <tr>
              <td>Updated Date</td>
              <td><%= user.updated_at.strftime("%Y/%m/%d") %></td>
            </tr>
                  <tr>
              <td>Updated User</td>
              <td><%= User.find(user.updated_user_id).name%></td>
            </tr>
          </table>
      </div>

      <div class="modal-footer clearfix">
          <button class="close clear-btn detail-close" data_id="<%= user.id %>">Close </button>
      </div>

    </div>
  </div>
</div><!-- END the modal -->