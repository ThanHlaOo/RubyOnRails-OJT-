<%= render partial: "layouts/header" %>
<div class="login-header">
  <h1> Change Password </h1>
</div>
    <% if flash[:notice] %>
      <%  flash[:notice].each do |error| %>
        <p  class="validation-error"> <%= error%></p>
      <% end %>
    <% end%>
<%= form_with model: @user, url: '/password', method: :patch, class: "create-form register-form password-change-form" ,local: true do |form| %>
  <table class="">
 <tr>
  <td>
     <%= form.label :current_password, "Current Password" %>
  
  </td>
  <td>
  <%= form.password_field :current_password %>
         <% if flash[:current_password] %>
            <p class="validation-error"> <%= flash[:current_password]%></p>
        <% end%>
     <% if flash[:incorrect_password] %>
        <p  class="validation-error"> <%= flash[:incorrect_password]%></p>
        <% end%>
  </td>
 </tr>
  <tr>
  <td>
     <%= form.label :password, "New Password" %>

  </td>
  <td>
      <%= form.password_field :password %>
               <% if flash[:password] %>
            <p class="validation-error"> <%= flash[:password]%></p>
        <% end%>
  
  </td>
 </tr>
   <tr>
  <td>
 <%= form.label :password_confirmation, "New Confirm Password" %>

  </td>
  <td>
      
  <%= form.password_field :password_confirmation %>
            <% if flash[:password_confirmation] %>
            <p class="validation-error"> <%= flash[:password_confirmation]%></p>
        <% end%>
          <% if flash[:confirmation_error] %>
            <p class="validation-error"> <%= flash[:confirmation_error]%></p>
        <% end%>
  </td>
 </tr>
  
  <tr>
  <td>
  </td>
  <td>
  <div class="input-group register-btn-group">
     <%= form.submit 'Update Password', class: "register-btn password-change-btn" %>
 </div>
  </td>
  </tr>
 </table>
 
<% end %>

    <%= render partial: "layouts/footer" %>
