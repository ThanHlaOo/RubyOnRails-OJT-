

<%= stylesheet_link_tag "style", "data-turbo-track": "reload" %>
<div class="login-header">
  <h1> Post List</h1>
  
</div>
 <% if flash[:post_created] %>
    <%  flash[:post_created].each do |message| %>
      <p  class="success"> <%= message%></p>
    <% end %>
  <% end%>
<div class="input-group clearfix">
  <div class="list-btn-group">
   <form action="search" method="get" class="list-form">
    <label>keyword: </label>
    <input type="text" name="keyword" class="list-input">
    <button type="submit" class="register-btn list-btn">Search</button>
  </form>
  <a href="/posts/new" class="list-btn register-btn">Create</a>
  <a href="/upload" class="list-btn register-btn">Upload </a>
  <a href="/download" class="list-btn register-btn">Download </a>
  </div>
</div>
<table class="post-table">
  <thead>
      <tr>
        <td>
        Post Title
        </td>
        <td>
        Post Description
        </td>
        <td>
        Post User
        </td>
        <td>
        Post Date
        </td>
        <td>
        Operation
        </td>
      </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>       
      <td>
          <a href="/posts/<%= post.id%>" class="post-title"> <%= post.title   %></a>
        </td>
        <td>
          <%=  post.description%>
        </td>
        <td>
          <%= post.user.name   %>
        </td>
        <td>
          <%= post.created_at.strftime("%Y/%m/%d") %>
        </td>
        <td>
          
          <%= link_to "Edit", edit_post_path(post), class: "edit-btn" %>
          <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-btn"  %>
        </td>
    </tr>
    
  <% end %>

  </tbody>
</table>
